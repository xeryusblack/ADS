<p id="notice"><%= notice %></p>

<p>
  <strong>Training Activity:</strong>
  <%= @acquired_quota_point.training_activity %>
</p>

<p>
  <strong>Date Conducted:</strong>
  <%= @acquired_quota_point.date_conducted %>
</p>

<p>
    <strong>Quota Point Value of Training Activity:</strong>
  <%= @acquired_quota_point.amount %>
</p>

<p> 
  <strong>Varsity Members:</strong> 
</p>

    <table style="width: 100%;">
    <tr>
      <th>Name</th>
      <th>Article</th>
      <th>Judge</th>
      <th>Amount</th>
    </tr>
    <% @acquired_quota_point.activity_members.each do |member| %>
      <tr>
        <td><%= member.varsity_member.to_s%></td>
        <td><%= member.reply(member.judge)%></td>
        <td><%= member.reply(member.article)%></td>
        <td><%= number_to_currency(member.amount, :unit => "Php") %></td>

      </tr>
    <% end %>
  </table>


