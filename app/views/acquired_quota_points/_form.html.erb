<%= simple_form_for(@acquired_quota_point) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label 'What was the training activity done?' %>
    <%= f.association :training_activity %>
  </div>

  <div class="form-inputs">
    <%= f.label 'Date Conducted' %>
    <%= f.date_select :date_conducted %>
  </div>

  <div class="form-inputs">
    <%= f.input :amount %>
  </div>

  <div class="form-inputs">
    <%= f.fields_for :varsity_member do |varsity_member|%>
      <%= varsity_member.association :varsity_member %>
      <%= varsity_member.link_to_remove "Remove" %>
    <% end %>
    <p><%= f.link_to_add "Add a member", :varsity_member %></p>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
