<h1>Listing Contingents</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Competition</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @contingents.each do |contingent| %>
      <tr>
        <td><%= contingent.tryout_intent.competition %></td>
        <td style="text-align: right;"><%= link_to 'Show', contingent, class: "btn btn-primary" %></td>

        <% if officer_in_charge_signed_in? %>
              <% @role = Role.find(current_officer_in_charge.role_id).name %>

              <% if @role == "Office of Training and Varsity"%>
                  <td><%= link_to 'Edit', edit_contingent_path(contingent), class: "btn btn-warning" %></td>
              <% end %>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

