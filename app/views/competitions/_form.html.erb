<%= simple_form_for(@competition) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :number_of_contingent %>
  </div>

  <div class="form-inputs">
    <%= f.input :arqp_contingent_debater %>
  </div>

  <div class="form-inputs">
    <%= f.input :arqp_contingent_adjudicator %>
  </div>

  <div class="form-inputs">
    <%= f.input :arqp_non_contingent %>
  </div>

  <div class="form-inputs">
    <%= f.input :presidential_approval_status, :as => :select, :collection => Competition::STATUS %>
  </div>

  <div class="form-inputs">
    <%= f.label :start_date, "Start Date" %>
    <%= f.date_select :start_date %>
  </div>

  <div class="form-inputs">
    <%= f.label :start_date, "End Date" %>
    <%= f.date_select :end_date %>
  </div>

  <div class="form-inputs">
    <%= f.input :quota_point_monetary_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
